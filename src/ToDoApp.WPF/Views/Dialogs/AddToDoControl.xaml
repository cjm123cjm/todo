<UserControl x:Class="ToDoApp.WPF.Views.Dialogs.AddToDoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToDoApp.WPF.Views.Dialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Height="300"
             Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="添加待办事项"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20 10" />

        <DockPanel Grid.Row="1"
                   LastChildFill="False">
            <StackPanel Orientation="Horizontal"
                        Margin="20 10"
                        DockPanel.Dock="Top">
                <TextBlock Text="状态"
                           VerticalAlignment="Center" />
                <ComboBox Margin="10 0 0 0">
                    <ComboBoxItem>待办</ComboBoxItem>
                    <ComboBoxItem>已办</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <TextBox  materialDesign:HintAssist.Hint="待办事项概要"
                      Margin="20 0"
                      DockPanel.Dock="Top" />

            <TextBox  materialDesign:HintAssist.Hint="请输入待办内容"
                      Margin="20 0"
                      MinHeight="100"
                      DockPanel.Dock="Top" />
        </DockPanel>

        <StackPanel Grid.Row="2"
                    Margin="10"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="取消"
                    Margin="0 0 10 0"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Content="确定" />
        </StackPanel>

    </Grid>
</UserControl>
